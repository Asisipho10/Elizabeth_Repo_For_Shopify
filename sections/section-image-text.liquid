
<div class="image-text-section">
    <div class="container my-0 mx-auto"
        style="max-width: {{ section.settings.page_width }}px;"
    >
        <div class="content-wrapper flex flex-col md:flex-row justify-center items-center">
            <div class="image-container w-2/3 px-[10px] min-h-[300px] overflow-hidden">
              {% if section.settings.image != blank %}
                <img 
                src="{{ section.settings.image | image_url: width: '800' }}" 
                alt=""
                class="min-w-[40px] object-cover p-4"
                loading="lazy"
                >
              {% endif %}
            </div>
            <div class="text-container w-1/3 px-[10px]">
              <div class="text-wrapper flex flex-col justify-center items-start">
                <div class="header">
                  <h1 class="text-[40px]">
                    {{ section.settings.header }}
                  </h1>
                </div>
                <div class="subheader wrap">
                  {{ section.settings.subheader }}
                </div>
                <button class="mt-[20px]">
                  <a class="px-8 py-4 bg-slate-600 text-white rounded-[4px]" 
                    href="{{ section.settings.button_link }}">
                    {{ section.settings.button_label }}
                  </a>
                </button>
              </div>
            </div>
        </div>
    </div>
</div>



{% schema %}
{
    "name": "image-text",
    "settings": [
      {
        "type": "number",
        "id": "page_width",
        "label": "Page width",
        "default": 1200
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "header",
        "label": "Header"
      },
      {
        "type": "richtext",
        "id": "subheader",
        "label": "Subheader"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Label",
        "default": "Shop Collection"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Link"
      }
    ],
    "presets": [
        {
            "name": "Image-text"
        }
    ]
}
{% endschema %}
