{% assign main_menu_linklist = linklists[section.settings.menu].links %}

<div class="relative bg-black bg-opacity-75" x-data="{ mobileMenuOpen: false }">
  <div class="mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center py-6 md:justify-start md:space-x-10">
      <!-- STORE NAME / STORE LOGO -->
      <div class="flex justify-start lg:flex-1 truncate">
        <img src="https://cdn.shopify.com/s/files/1/0900/4875/8049/files/Vector.png?v=1734618569" alt="">
      </div>

      <!-- HAMBURGER MENU BUTTON FOR MOBILE -->
      <div class="block md:hidden -mr-2 -my-2 ml-3">
        <button x-on:click="mobileMenuOpen = !mobileMenuOpen" type="button" class="bg-white p-2 inline-flex items-center justify-center focus:outline-none">
          <!-- HAMBURGER ICON (shown when mobileMenuOpen is false) -->
          <span x-show="!mobileMenuOpen">
            {% render 'icon-menu' %}
          </span>
          <!-- CLOSE ICON (shown when mobileMenuOpen is true) -->
          <span x-show="mobileMenuOpen">
            {% render 'icon-close' %}
          </span>
        </button>
      </div>

      <!-- DESKTOP NAVIGATION MENU -->
      <nav x-data="{ open: false }" class="hidden md:flex space-x-10">
        {% for link in linklists.main-menu.links %}
            {% if link.links != blank %}
              <div class="relative">
                <button x-on:click="open = !open" type="button" class="inline-flex items-center text-base text-white hover:text-white">
                  {{ link.title }}
                  {% render 'icon-dropdown' %}
                </button>
                <!-- DROPDOWN MENU -->
                <div x-show="open" @click.away="open = false" class="absolute z-10 -ml-5 mt-5 transform px-2 w-screen max-w-md sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2">
                  <div class="shadow-lg border ring-black ring-opacity-5 overflow-hidden rounded-lg">
                    <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                      {% for childlink in link.links %}
                        <a href="{{ childlink.url }}" class="-m-3 p-3 flex items-start rounded-lg hover:bg-white-100">
                          <div class="ml-4">
                            <p class="text-white text-base font-medium">
                              {{ childlink.title }}
                            </p>
                          </div>
                        </a>
                      {% endfor %}
                    </div>
                  </div>
                </div>
              </div>
            {% else %}
              <a href="{{ link.url }}" class="text-base text-white hover:text-white {% if link.active == true %}text-blue-900{% endif %}">{{ link.title }}</a>
            {% endif %}
        {% endfor %}
      </nav>

      <!-- DESKTOP ICONS AND LINKS -->
      <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5">
        <a href="{{ routes.cart_url }}" class="whitespace-nowrap text-base text-white hover:text-white">
          {% render 'icon-shopping-bag' %}
        </a>
      </div>
    </div>
  </div>

  <!-- MOBILE MENU CONTENT -->
  <div x-show="mobileMenuOpen" class="absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden">
    <div class="shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full">
      <div class="p-5 divide-y-2 divide-white-50">
        <!-- MOBILE MENU HEADER WITH STORE NAME AND CLOSE BUTTON -->
        <div class="flex items-center justify-between pb-3">
          <div>
            <h1 class="text-lg text-white-500">{{ section.settings.mobile_menu_title }}</h1>
          </div>
          <div class="-mr-2">
            <button x-on:click="mobileMenuOpen = false" type="button" class="bg-white rounded-md p-2 text-white-500">
              {% render 'icon-close' %}
            </button>
          </div>
        </div>

        <!-- MOBILE MENU LINKS -->
        <div class="pt-3">
          <nav class="grid gap-y-7">
            {% for link in main_menu_linklist %}
              {% assign link_handle = link.handle | replace: '-', '_' %}
              {% if link.links != blank %}
                <div x-data="{ {{ link_handle }}: false }" class="relative">
                  <button 
                    x-on:click="{{ link_handle }} = !{{ link_handle }}" 
                    type="button" 
                    class="text-base text-white-500 hover:text-white-900 flex items-center justify-between w-full">
                    <div>{{ link.title }}</div>
                    {% render 'icon-dropdown' %}
                  </button>
                  <!-- CHILD MENU -->
                  <div x-show="{{ link_handle }}" class="grid gap-y-7 py-3">
                    {% for childlink in link.links %}
                      <a href="#" class="-m-3 p-3 mt-2 flex items-center rounded-md text-white-500 hover:text-white-900 hover:bg-white-50">
                        <span class="ml-3 text-base font-medium text-white-500">{{ childlink.title }}</span>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              {% else %}
                <a href="#" class="-m-3 p-3 flex items-center rounded-md text-white-500 hover:text-white-900 hover:bg-white-50">
                  {{ link.title }}
                </a>
              {% endif %}
            {% endfor %}
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
    "name": "Header",
    "settings": [
      {
        "type": "liquid",
        "id": "liquid_text",
        "Label": "Logo"
      },
      {
        "type": "text",
        "id": "mobile_menu_title",
        "label": "Title",
        "default": "Menu",
        "info": "This is the title of the mobile menu title"
      },
      {
        "type": "link_list",
        "id": "menu",
        "label": "Header Menu",
        "default": "main-menu",
        "info": "This is the title of the mobile menu title"
      }
    ]
}
{% endschema %}
