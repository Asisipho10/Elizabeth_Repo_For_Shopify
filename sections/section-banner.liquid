
<div class="img-wrapper w-full h-[400px] bg-cover bg-center relative"
    style="background-image: url('{{ section.settings.image |  image_url: width: '2000' }}')">

    <div class="content-wrapper absolute top-0 left-0 w-full h-full flex flex-col justify-{{ section.settings.justification }} items-{{ section.settings.alignment }}">
        {% for block in section.blocks %}
            <div class="p-10">
                <div class="header-wrapper ">
                    <h1 class="text-[40px] md:text-[60px] uppercase"
                    style="color: {{ block.settings.text_color }};">{{ block.settings.header }}</h1>
                </div>
                <div class="text-wrapper"
                    style="color: {{ block.settings.text_color }};">
                    {{ block.settings.subheader }}
                </div>
            </div>
        {% endfor %}
    </div>
        
</div>



{% schema %}
{
    "name": "Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Background Image"
        },
        {
          "type": "select",
          "id": "alignment",
          "default": "items-center text-center",
          "label": "Content Alignment",
          "options": [
            {
              "value": "items-start text-start",
              "label": "Left"
            },
            {
              "value": "items-center text-center",
              "label": "Center"
            },
            {
              "value": "items-end text-end",
              "label": "Right"
            }
          ]
        },
        {
          "type": "select",
          "id": "justification",
          "default": "justify-center justify-center",
          "label": "Content Justify",
          "options": [
            {
              "value": "justify-start justify-start",
              "label": "top"
            },
            {
              "value": "justify-center justify-center",
              "label": "Center"
            },
            {
              "value": "justify-end justify-end",
              "label": "bottom"
            }
          ]
        }
    ],
    "blocks": [
        {
            "name": "Text",
            "type": "text",
            "settings": [
                {
                    "type": "text",
                    "id": "header",
                    "label": "Header"
                },
                {
                    "type": "richtext",
                    "id": "subheader",
                    "label": "Subheader"
                },
                {
                    "type": "color",
                    "id": "text_color",
                    "label": "Text Color",
                    "default": "#fff"
                }
            ] 
        }
    ],
    "presets": [
        {
            "name": "Banner"
        }
    ]
}
{% endschema %}
