
<div class="img-wrapper w-full h-[400px] bg-cover bg-center relative"
    style="background-image: url('{{ section.settings.image |  image_url: width: '2000' }}')">

    <div class="content-wrapper absolute top-0 left-0 w-full h-full flex flex-col"
        style="justify-content: {{ section.settings.justification }}; items-align: {{ section.settings.alignment }};">
        {% for block in section.blocks %}
            <div class="header-wrapper">
                <h1>{{ block.settings.header }}</h1>
            </div>
            <div class="text-wrapper">
                {{ block.settings.subheader }}
            </div>
        {% endfor %}
    </div>
        
</div>



{% schema %}
{
    "name": "Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Background Image"
        },
        {
            "type": "select",
            "id": "justification",
            "label": "Text justification",
            "default": "center",
            "options": [
                {
                    "value": "left",
                    "label": "left"
                },
                {
                    "value": "center",
                    "label": "center"
                },
                {
                    "value": "right",
                    "label": "right"
                }
            ]
        },
        {
            "type": "select",
            "id": "alignment",
            "label": "Text Alignment",
            "default": "center",
            "options": [
                {
                    "value": "top",
                    "label": "top"
                },
                {
                    "value": "center",
                    "label": "center"
                },
                {
                    "value": "bottom",
                    "label": "bottom"
                }
            ]
        }
    ],
    "blocks": [
        {
            "name": "Text",
            "type": "ichtext",
            "settings": [
                {
                    "type": "text",
                    "id": "header",
                    "label": "Header"
                },
                {
                    "type": "richtext",
                    "id": "subheader",
                    "label": "Subheader"
                }
            ] 
        }
    ],
    "presets": [
        {
            "name": "Banner"
        }
    ]
}
{% endschema %}
