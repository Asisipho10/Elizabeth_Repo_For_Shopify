<div class="deco-section w-full ">
  <div class="deco-block flex flex-row justify-start items-center">
    {% if section.settings.image != blank %}
      <img 
        src="{{ section.settings.image | image_url: width: '2000' }}" 
        alt=""
        class="w-fit h-full object-cover"
        loading="lazy"
      >
    {% endif %}
  </div>  
</div>


{% schema %}
{
  "name": "Image Decoration",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"  
    }
  ],
  "presets": [
    {
      "name": "Image Decoration"  
    }
  ]
}
{% endschema %}