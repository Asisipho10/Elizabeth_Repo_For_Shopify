

<div class="video-section relative flex flex-col justify-center md:items-end my-18"
    style="background-color: {{ section.settings.bg_color }};">
  <div class="header md:absolute mx-[20px] md:mx-0 flex flex-row md:flex-col justify-center items-center md:items-start" 
      style="top: {{ section.settings.top }}%; left: {{ section.settings.left }}%;"
    >

    {% if section.settings.text != blank %}
      {% if section.settings.small_text != blank %}
        <div class="md:w-full hidden md:flex flex-row justify-center md:justify-start items-center"
            style="color: {{ section.settings.text_color }};">
          <hr class="md:w-4 md:mr-2">
            {{ section.settings.small_text }}
        </div>
      {% endif %}

      <h1 class="text-center md:text-start font-bold uppercase"
          style="color: {{ section.settings.text_color }}; font-size: {{ section.settings.text_size }}px;"
          >{{ section.settings.text }}
      </h1>
    {% endif %}
  </div>
      
  <div class="content-block md:absolute bottom-10 mx-[20px] md:mx-0 flex flex-col justify-center items-center md:justify-start md:items-start" 
      style="left: {{ section.settings.left }}%;">
    {% if section.settings.subtext != blank %}
      <div class="text-block md:max-w-[450px]">
        <div class="text-[16px]" style="color: {{ section.settings.text_color }};" >{{ section.settings.subtext }}</div>
      </div>
    {% endif %}
      
    {% if section.settings.button != blank %}
      <div class="btn-block w-full md:w-48 flex justify-center">
        <a class="w-full md:fit flex justify-center bg-white text-black py-4 px-8 rounded-md mt-4" href="{{ section.settings.btn_url }}">
          <button class="flex flex-col justify-center items-center">{{ section.settings.button }}</button>
        </a>
      </div>
    {% endif %}
      
  </div>
  <div class="video my-8 max-h-[600px] md:mr-10 md:w-3/4 flex flex-col justify-center items-center overflow-hidden">
    {% if section.settings.video_url %}
      <a href="{{ section.settings.video_url }}" 
        class="w-full">
    {% endif %}
      
      <video autoplay muted loop
        class="object-fit w-full "
      >
        {% if section.settings.video %}
          <source src="{{ section.settings.video }}" type="video/mp4">
         {% else %}
          <p>Your browser does not support the video tag.</p> 
        {% endif %}
      </video>
      
      {% if section.settings.video_url %}
        </a>
      {% endif %}
  </div>  
</div>



{% schema %}
{
  "name": "Video",
  "settings": [
    {
      "type": "url",
      "id": "video",
      "label": "Video URL"  
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video Link" 
    },
    {
      "type": "color_background",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000"
    },
    {
      "type": "number",
      "id": "top",
      "label": "Top align",
      "default": 20
    },
    {
      "type": "number",
      "id": "left",
      "label": "Left Align",
      "default": 4
    },
    {
      "type": "richtext",
      "id": "small_text",
      "label": "Above Text"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "number",
      "id": "text_size",
      "label": "Text Size",
      "default": 64
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#fff"
    },
    {
      "type": "richtext",
      "id": "subtext",
      "label": "Subtext"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Video",
      "category": "Media" 
    }
  ]
}
{% endschema %}